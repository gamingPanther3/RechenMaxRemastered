<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:id="@+id/changelogUI"
    tools:context=".ChangelogActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChangelogActivity">

        <ImageView
            android:id="@+id/changelog_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_back"
            android:layout_marginVertical="9dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAccessibility="no" />

        <View
            android:id="@+id/changelog_back_button_hitbox"
            android:layout_width="80dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="@+id/changelog_back_button"
            app:layout_constraintStart_toStartOf="@+id/changelog_back_button"
            tools:ignore="MissingConstraints"
            android:onClick="openSettingsActivity"/>

        <TextView
            android:id="@+id/changelog_back_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="20dp"
            android:text="@string/changelog_title"
            android:textColor="@color/colorButtonVeryHigh"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/changelog_back_button"
            app:layout_constraintStart_toEndOf="@+id/changelog_back_button"
            app:layout_constraintTop_toTopOf="@+id/changelog_back_button" />

        <TextView
            android:id="@+id/changelog_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="@string/changelog_general"
            android:textColor="@color/colorButtonClipboard"
            android:layout_marginHorizontal="60dp"
            app:layout_constraintTop_toBottomOf="@+id/changelog_back_button_text" />

        <TextView
            android:id="@+id/changelog_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorButtonVeryHigh"
            android:text="@string/changelog_new_ui"
            app:layout_constraintTop_toBottomOf="@+id/changelog_general"
            app:drawableLeftCompat="@drawable/baseline_ads_click_24"
            android:drawablePadding="20dp"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/app_menu_title_size"
            android:layout_marginHorizontal="15dp"/>

        <TextView
            android:id="@+id/changelog_language_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/coloNearlyWhite"
            android:text="@string/changelog_new_ui_description"
            app:layout_constraintTop_toBottomOf="@+id/changelog_language"
            android:paddingVertical="1dp"
            android:paddingHorizontal="5dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/settings_text_description"
            android:layout_marginHorizontal="15dp"/>

        <TextView
            android:id="@+id/changelog_new_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorButtonVeryHigh"
            android:text="@string/changelog_new_edit"
            app:layout_constraintTop_toBottomOf="@+id/changelog_language_description"
            app:drawableLeftCompat="@drawable/baseline_edit_24"
            android:drawablePadding="20dp"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/app_menu_title_size"
            android:layout_marginHorizontal="15dp"/>

        <TextView
            android:id="@+id/changelog_new_edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/coloNearlyWhite"
            android:text="@string/changelog_new_edit_description"
            app:layout_constraintTop_toBottomOf="@+id/changelog_new_edit"
            android:paddingVertical="1dp"
            android:paddingHorizontal="5dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/settings_text_description"
            android:layout_marginHorizontal="15dp"/>

        <TextView
            android:id="@+id/changelog_variables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorButtonVeryHigh"
            android:text="@string/changelog_variables"
            app:layout_constraintTop_toBottomOf="@+id/changelog_new_edit_description"
            app:drawableLeftCompat="@drawable/baseline_abc_24"
            android:drawablePadding="20dp"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/app_menu_title_size"
            android:layout_marginHorizontal="15dp"/>

        <TextView
            android:id="@+id/changelog_variables_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/coloNearlyWhite"
            android:text="@string/changelog_variables_description"
            app:layout_constraintTop_toBottomOf="@+id/changelog_variables"
            android:paddingVertical="1dp"
            android:paddingHorizontal="5dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/settings_text_description"
            android:layout_marginHorizontal="15dp"/>

        <View
            android:id="@+id/category_seperator_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorButtonActionbar"
            app:layout_constraintTop_toBottomOf="@+id/changelog_variables_description" />

        <TextView
            android:id="@+id/changelog_category_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:text="@string/category_info"
            android:textColor="@color/colorButtonClipboard"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/category_seperator_1" />

        <TextView
            android:id="@+id/changelog_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:text="@string/about_other_license"
            android:textSize="@dimen/app_menu_title_size"
            android:textColor="@color/colorButtonVeryHigh"
            app:drawableLeftCompat="@drawable/baseline_policy_24"
            app:layout_constraintTop_toBottomOf="@+id/changelog_category_info"/>

        <TextView
            android:id="@+id/changelog_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:text="@string/about_other_privacy_policy"
            android:textSize="@dimen/app_menu_title_size"
            android:textColor="@color/colorButtonVeryHigh"
            app:drawableLeftCompat="@drawable/baseline_private_connectivity_24"
            app:layout_constraintTop_toBottomOf="@+id/changelog_license"/>

        <TextView
            android:id="@+id/changelog_app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:text="@string/app_version"
            android:textSize="@dimen/app_menu_title_size"
            android:textColor="@color/colorButtonVeryHigh"
            app:drawableLeftCompat="@drawable/baseline_info_outline_24"
            app:layout_constraintTop_toBottomOf="@+id/changelog_privacy_policy" />

        <View
            android:id="@+id/category_seperator_end"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorButtonActionbar"
            app:layout_constraintTop_toBottomOf="@+id/changelog_app_version" />

        <TextView
            android:id="@+id/changelog_changelog_made_in_germany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="65dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="@string/about_made_in_germany"
            android:textSize="@dimen/app_menu_title_size"
            android:textColor="@color/colorButtonHigh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_seperator_end" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>